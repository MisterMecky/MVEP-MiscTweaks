<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Apparel Expanded â€” Accessories</li>
        </mods>

        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                
                <!-- VAEA_Apparel_Backpack -->

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="VAEA_Apparel_Backpack"]/carryingCapacity</xpath>
                    <value>
                        <carryingCapacity>30</carryingCapacity>
                    </value>
                </li>

                <!-- VAEA_Apparel_BattleBanner -->

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="VAEA_Apparel_BattleBanner"]/equippedStatOffsets/PainShockThreshold</xpath>
                    <value>
                        <PainShockThreshold>0.25</PainShockThreshold>
                    </value>
                </li>

                <!-- VAEA_Apparel_Quiver -->

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="VAEA_Apparel_Quiver"]/statBases/VEF_RangedCooldownFactor</xpath>
                    <value>
                        <VEF_RangedCooldownFactor>0.75</VEF_RangedCooldownFactor>
                    </value>
                </li>

                <!-- VAEA_Apparel_AmmoPack -->

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="VAEA_Apparel_AmmoPack"]/statBases/VEF_RangedCooldownFactor</xpath>
                    <value>
                        <VEF_RangedCooldownFactor>0.85</VEF_RangedCooldownFactor>
                    </value>
                </li>

                <!-- VAEA_Apparel_RangedShieldBelt -->

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="VAEA_Apparel_RangedShieldBelt"]/statBases/EnergyShieldRechargeRate</xpath>
                    <value>
                        <EnergyShieldRechargeRate>0.09</EnergyShieldRechargeRate>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="VAEA_Apparel_RangedShieldBelt"]/statBases/EnergyShieldEnergyMax</xpath>
                    <value>
                        <EnergyShieldEnergyMax>0.5</EnergyShieldEnergyMax>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="VAEA_Apparel_RangedShieldBelt"]/recipeMaker/recipeUsers</xpath>
                    <value>
                        <recipeUsers>
                            <li>FabricationBench</li>
                        </recipeUsers>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="VAEA_Apparel_RangedShieldBelt"]/costList/ComponentIndustrial</xpath>
                    <value>
                        <ComponentSpacer>1</ComponentSpacer>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>
</Patch>