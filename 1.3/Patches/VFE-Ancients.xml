<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Factions Expanded - Ancients</li>
        </mods>

        <match Class="patchOperationSequence">

            <li Class="PatchOperationRemove">
                <xpath>Defs/VFEAncients.PowerDef[defName = "MartialArtist"]/setStats</xpath>
            </li>

            <li Class="PatchOperationAdd">
                <xpath>Defs/VFEAncients.PowerDef[defName = "MartialArtist"]</xpath>
                <value>
                    <statOffsets>
                        <MeleeDodgeChance>40</MeleeDodgeChance>
                    </statOffsets>
                </value>
            </li>

        </match>

        
    </Operation>
</Patch>